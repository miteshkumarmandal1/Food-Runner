<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:context=".activity.Login_Activity">

    <ImageView
        android:id="@+id/iv_logo_login"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/flash_logo"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/et_email_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_logo_login"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:hint= "Enter Mobile Number"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@color/black"
        android:inputType="phone"
        android:textColorHint="@color/teal_700"/>

    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_email_login"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:inputType="textPassword"
        android:hint= "Enter Password"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/teal_700"
        />
    <Button
        android:id="@+id/bt_login_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/et_password_login"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_forgot_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password?"
        android:layout_below="@id/bt_login_login"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_signup_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Don't have an account? Sign Up now."
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"/>

</RelativeLayout>